@using Lamweb.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Thông Tin Giỏ Hàng</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>mã sản phẩm</td>
        <td>tên sản phẩm</td>
        <td>ảnh sản phẩm</td>
        <td>số lượng</td>
        <td>đơn giá</td>
        <td>thành tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td>@item.iMagiay</td>
            <td>@item.sTengiay</td>
            <td><img src="~/imagers/@item.sAnhbia"></td>
            @using (Html.BeginForm("Capnhatgiohang", "GioHang", new { @iMaSp = item.iMagiay }))
            {
                <td><input type="number" min="1" name="txtSoLuong" value="@item.iSoluong" style="background-color:brown" /></td>
                <td>@string.Format("{0:0,0}", item.dDongia)</td>
                <td>@string.Format("{0:0,0}", item.dThanhtien)</td>
                <td><a href="@Url.Action("Details", "TrangChu", new { id = item.iMagiay })"> Chi Tiet</a></td>
                <td>@Html.ActionLink("Xoa", "Xoagiohang", new { @iMaSp = item.iMagiay })</td>
                <td> <input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="4"> số lượng sản phẩm: @ViewBag.Tongsoluong</td>
        <td colspan="5">Tổng tiền: @string.Format("{0:0,0}", ViewBag.tongtien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold ; color:blue; text-align:right">

        <td colspan="9">@Html.ActionLink("Xoá giỏ hàng", "Xoatatca")</td>
    </tr>
    <tr style="font-weight:bold ; color:blue; text-align:right">

        <td colspan="9" align="center">@Html.ActionLink("Đặt hàng", "Dathang", "Giohang")</td>
    </tr>
</table>


