@using Lamweb.Models
@using PagedList.Mvc;
@model  PagedList.PagedList<Lamweb.Models.GIAY>


@{
    ViewBag.Title = "giay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý thông tin sản phẩm</h2>
<p>
    @Html.ActionLink("CreateNew", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Tengiay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Mota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Anhbia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Ngaycapnhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Soluongton)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaCD)
        </th>      
    </tr>
    @foreach(var item  in Model)
    {
        <td>
            @Html.DisplayFor(modelItem => item.Giaban)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mota)
        </td>
        @*<td>
            <img src="@Url.Content("~/imagers/"+ item.Anhbia)" />
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Ngaycapnhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluongton)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHUDE.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Edit","Edit", new { id = item.Magiay})
            @Html.ActionLink("Detail", "Detail", new { id = item.Magiay })
            @Html.ActionLink("Delete", "Delete", new { id = item.Magiay })
        </td>
    }
</table>


 Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="Menutrang">
    @Html.PagedListPager(Model, page => Url.Action("giay", new { page = page }))
</div>
<style>
    .Menutrang li {
        display: inline;
    }
   </style>