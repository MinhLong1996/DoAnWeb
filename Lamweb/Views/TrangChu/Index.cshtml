@using Lamweb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<GIAY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<!DOCTYPE html>
<link href="~/Content/Style.css" rel="stylesheet" type="text/css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div id="container">
    <div id="banner">
        <div id="logo">
            <img src="~/imagers/logo2.jpg" />
        </div>
        <div id="menutop">
            <a href="./TrangChu/Index">Trang Chủ</a>
            <a href="#">Giới thiệu</a>
            <a href="#">Sản phẩm</a>
            <a href="./TrangChu/Khuyenmai">Khuyến mãi</a>
            <a href="./TrangChu/Lienhe">Liên hệ</a>
            <a href="./TrangChu/Quangcao">Quảng cáo</a>
            <a href=".TrangChu/DangNhap">Đăng nhập</a>
        </div>

    </div>
    <div id="content">
        <div id="left">
            <div class="module">
                <h3>Danh mục sản phẩm</h3>
              @Html.Action("Chude","TrangChu")
            </div>

            <div class="module">
                <h3>Thống kê truy cập</h3>
                <div class="StaticticImg">
                    <img src="~/imagers/0.png" />
                    <img src="~/imagers/7.png" />
                    <img src="~/imagers/8.png" />
                    <img src="~/imagers/3.png" />
                    <img src="~/imagers/0.png" />
                </div>
                <div class="StaticticContent">
                    <div class="leftAlign"><img src="~/imagers/vlweek.png" /> Hôm nay</div>
                    <div class="rightAlign">100</div>
                    <div class="leftAlign"><img src="~/imagers/vlweek.png" /> Hôm qua</div>
                    <div class="rightAlign">100</div>
                    <div class="leftAlign"><img src="~/imagers/vlweek.png" /> Tuần này</div>
                    <div class="rightAlign">6900</div>
                    <div class="leftAlign"><img src="~/imagers/vlweek.png" /> Tuần trước</div>
                    <div class="rightAlign">5000</div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="module">
                <h3>Quảng cáo</h3>
                <div class="ads">
                    <img src="~/imagers/dienmayxanh.gif" /> <img src="~/imagers/Conmeo.gif" />
                </div>
            </div>
        </div>
        <div id="right">
            <div id="slideshow">
                <img src="~/imagers/hinhnensandal.jpg" />
            </div>
            <div id="products">
                
                @foreach (var giay in Model)
                {
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <a href="@Url.Action("Chitiet" , "TrangChu", new { id = giay.Magiay}) ">
                                <img alt="@giay.Tengiay" src="~/imagers/@giay.Anhbia" width="100" />
                                <div>
                                    <br />
                                    <h4 style="text-align:center">
                                        @giay.Tengiay
                                    </h4>
                                    <p></p>
                                </div>
                                <div class="ratings">
                                    <p class="pull-right">15 reviews</p>
                                    <p>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star">
                                        </span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>
                                        <span class="glyphicon glyphicon-star"></span>

                                </div>
                        </div>
                    </div>
                }


            </div>

            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
            <div class="Menutrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
            <style>
                .Menutrang li {
                    display: inline;
                }
            </style>
            <div class="clear"></div>
        </div>
        <div id="footer">
            <p>Bản quyền thuộc về : <b>Công ty MinhLong</b></p>
            <p>Được phát triểu bởi Minh Long Tester <b>Minh Long Shop</b></p>
        </div>
    </div>
</body>
</html>


